%h1 Listing categories

%div.table-responsive
  %table.table.table-striped
    %tr
      %th Name
      %th.col-xs-2.text-center Products count
      %th.action-column
      - if admin? current_user
        %th.action-column
        %th.action-column

    - categories.each do |category|
      %tr
        %td= category.name
        %td.text-center= category.products.size
        %td.text-center
          = link_to 'Show', category, {class: 'btn btn-link btn-xs'}
          - if admin? current_user
            %td.text-center
              = link_to 'Edit', edit_category_path(category), {class: 'btn btn-link btn-xs'}
            %td.text-center
              = link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link btn-xs'
%br

- if admin? current_user
  = link_to 'New Category', new_category_path, {class: 'btn btn-primary'}
